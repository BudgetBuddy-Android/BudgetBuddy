<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userauth.PolicyActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <!-- todo:
                    - temp padding
                    -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="80dp">

                <!-- backBtn -->
                <!-- todo:
                        - temp width, height
                        - temp margin
                        - temp background
                        -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="#FF0000"
                    app:layout_constraintBottom_toBottomOf="@+id/title_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/title_txt" />

                <!-- titleTxt -->
                <!-- todo:
                        - temp text
                        - temp textSize
                        -->
                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서비스 이용 약관 동의"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Logo -->
            <!-- todo:
                    - temp width, height
                    - temp margin
                    - temp background
                    -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="55dp"
                android:background="#00FF00" />


            <!-- Notice -->
            <!-- todo:
                    - temp margin
                    -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="55dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <!-- todo:
                        - temp text
                        - temp textSize
                        -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약관에 동의해주세요."
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- todo:
                        - temp text
                        - temp textSize
                        -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이 약관은 버버두에서 제공하는\n인터넷 관련 서비스를 이용함에 있어\n버버두와 이용자의 권리 의무 및\n책임사항을 규정하고 있습니다."
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <!-- Policy Constant -->
            <!-- todo:
                    - temp margin
                    -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="55dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <!-- all constant -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/all_agree_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- todo:
                            - temp width, height
                            - temp background
                            -->
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="#0000FF" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="모두 동의할게요."
                        android:textSize="14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- border -->
                <!-- todo:
                        - temp margin
                        - temp background
                        -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="#000000" />


                <!-- term of service -->
                <!-- todo:
                        - temp margin
                        -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">

                    <!-- todo:
                            - temp width, height
                            - temp background
                            -->
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="#0000FF" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="이용약관에 동의합니다.(필수)"
                        android:textSize="14sp" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:id="@+id/term_of_service_content_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="end"
                        android:text="보기"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- privacy policy -->
                <!-- todo:
                        - temp margin
                        - temp background
                        -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">

                    <!-- todo:
                            - temp width, height
                            - temp background
                            -->
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="#0000FF" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="개인정보 수집·이용 동의 (필수)"
                        android:textSize="14sp" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:id="@+id/privacy_policy_content_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="end"
                        android:text="보기"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- marketing -->
                <!-- todo:
                        - temp margin
                        -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">

                    <!-- todo:
                            - temp width, height
                            - temp background
                            -->
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="#0000FF" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="마케팅 정보 수신 동의 (선택)"
                        android:textSize="14sp" />

                    <!-- todo:
                            - temp margin
                            - temp text
                            - temp textSize
                            -->
                    <TextView
                        android:id="@+id/marketing_content_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="end"
                        android:text="보기"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Button -->
            <!-- todo:
                - temp padding
                -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sign_up_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp">

                <!-- backBtn -->
                <!-- todo:
                        - temp width, height
                        - temp margin
                        - temp background
                        -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_google_logo"
                    app:layout_constraintBottom_toBottomOf="@+id/login_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/login_txt" />

                <!-- titleTxt -->
                <!-- todo:
                        - temp text
                        - temp textSize
                        -->
                <TextView
                    android:id="@+id/login_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google로 계속하기"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>